<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gap_larger">

    <ImageButton
        android:id="@+id/iv_back_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/gap_larger"
        android:background="@drawable/action_button_background"
        android:clickable="true"
        android:contentDescription="@string/return_button"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_back_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_tittle"
        app:layout_constraintBottom_toBottomOf="@id/iv_back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_back_icon"
        app:layout_constraintTop_toTopOf="@id/iv_back_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>