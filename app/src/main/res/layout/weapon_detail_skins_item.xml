<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gap_larger">

    <TextView
        android:id="@+id/tv_weapon_skins_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weapon_skins"
        android:textColor="@color/red"
        android:textSize="@dimen/font_size_larger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_weapon_detail_skins"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="@dimen/gap_larger"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingStart="@dimen/gap_larger"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_weapon_skins_tittle"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>