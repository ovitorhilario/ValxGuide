<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="184dp"
    android:layout_height="184dp"
    android:layout_marginEnd="@dimen/gap_larger"
    android:background="@drawable/guide_item_background">

    <ImageView
        android:id="@+id/iv_rank_item_icon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="@dimen/gap_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_rank_item_tier_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank tier"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_rank_item_icon"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>